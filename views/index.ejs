<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/styleguide.css">
    <link rel="stylesheet" href="/css/carrito.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>
    <% var productos = typeof productos !== 'undefined' ? productos : []; %>
    <div class="landing_page">
        <header>
            <div class="navigation">
                <div class="navigation_wrapper">
                    <div class="middle_nav_wrapper">
                        <div class="middle_nav">
                            <div class="logo">
                                <div class="text_wrapper">MERKACHECHERES</div>
                            </div>
                            <div class="frame">
                                <div class="div_wrapper">
                                    <div class="div">
                                        <button class="dropbtn">Inicio</button>
                                    </div>
                                </div>
                                <div class="btn_primary_wrapper">
                                    <button class="dropbtn" onclick="window.location.href='/vercategorias'">Categorías</button>
                                </div>
                                <div class="div_wrapper">
                                    <div class="div">
                                        <button class="dropbtn">Catálogo</button>
                                    </div>
                                </div>
                            </div>
                            <div class="buscar">
                                <input type="text" placeholder="Buscar algo..." class="navbar">
                            </div>
                            <div class="frame_2">
                                <div class="iniciar_crear_cuenta">
                                    <% if (!session.validar) { %>
                                    <div class="btn_login">
                                        <button class="button_text_wrapper" onclick="window.location.href='/login'">Iniciar Sesión
                                        </button>
                                    </div>
                                    <div class="btn_registro">
                                        <button class="button_text_wrapper" onclick="window.location.href='/registro'">Crear Cuenta
                                        </button>
                                    </div>
                                    <% } %>
                                </div>
                                <% if (session.validar && usuario_actual && usuario_actual.tipoUsuario === 'admin') { %>
                                <div class="btn_admin">
                                    <button class="button_text_wrapper" onclick="window.location.href='/admin_dashboard'">Ir al
                                        Dashboard</button>
                                </div>
                                <% } %>
                                <div class="icons">
                                    <% if (session.validar && usuario_actual && usuario_actual.tipoUsuario === 'vendedor') { %>
                                    <div class="vender_button_div">
                                        <button class="vender-button" id="venderTexto" onclick="window.location.href='/publicar'">
                                            Vender
                                            <img src="/img/vender.png" id="heartButton" alt="Usuario">
                                        </button>
                                    </div>
                                    <% } %>
                                    <div class="shopping_cart_simple">
                                        <button class="dropbtn">
                                            <img src="/img/Heart.png" id="heartButton" alt="Inicio">
                                        </button>
                                    </div>
                                    <div class="shopping_cart_simple2">
                                        <div class="overlap_group">
                                            <button class="dropbtn" id="carrito-button">
                                                <img src="/img/Shopping.png" id="shoppingCar" alt="Inicio">
                                            </button>
                                            <div class="frame_3">
                                                <div class="text_wrapper_3">2</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="shopping_cart_simple3">
                                        <% if (session.validar) { %>
                                        <button class="user-slider-button" id="user-button">
                                            <img src="/img/Vector.png" id="heartButton" alt="Usuario">
                                        </button>
                                        <% } %>
                                    </div>
                                    <% if (messages && messages.length > 0) { %>
                                    <div id="message-container">
                                        <% messages.forEach(function(message) { %>
                                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                                            <%= message %>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                        <% }); %>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <%- include('partials/cart_sidebar') %>
        <%- include('partials/user_sidebar') %>

        <main>
            <section class="hero_secction">
                <div class="widgets">
                    <div class="frame_4">
                        <div class="overlap_group_wrapper">
                            <div class="overlap_group_2">
                                <div class="rectangulo"></div>
                                <div class="rectangulo_2"></div>
                                <div class="rectangulo_3"></div>
                                <p class="descubre_productos">
                                    DESCUBRE PRODUCTOS ÚNICOS<br />
                                    A PRECIOS QUE TE SORPRENDERÁN.
                                </p>
                            </div>
                        </div>
                        <p class="p">
                            Únete a nuestra comunidad para comprar y vender de manera fácil, segura y sostenible, mientras
                            cuidas el planeta y encuentras tesoros únicos.
                        </p>
                        <div class="btn_explorar">
                            <% if (session.validar) { %>
                            <button class="button_text_wrapper" onclick="window.location.href='/vercategorias'">Explorar ahora
                            </button>
                            <% } else { %>
                            <button class="button_text_wrapper" onclick="window.location.href='/registro'">Explorar ahora
                            </button>
                            <% } %>
                        </div>
                        <div class="frame_5_publicidad"></div>
                    </div>
                    <div class="publicidad"></div>
                    <div class="publicidad_2">
                        <div class="frame_6_publicidad"></div>
                        <div class="frame_7_publicidad"></div>
                    </div>
                </div>
            </section>
            <section class="mejores-vendedores">
                <div class="overlap_group-3">
                    <div class="rectangulo_4 text_wrapper-4">Mejores Vendedores</div>
                </div>
                <div class="carousel-wrapper">
                    <div class="carousel" id="carousel">
                        <div class="seller_card frame_8 me-3 flex-shrink-0"></div>
                        <div class="seller_card frame_9 me-3 flex-shrink-0"></div>
                        <div class="seller_card frame_10 me-3 flex-shrink-0"></div>
                        <div class="seller_card frame_11 me-3 flex-shrink-0"></div>
                        <div class="seller_card frame_12 me-3 flex-shrink-0"></div>
                        <!-- Duplicados para efecto carrusel -->
                        <div class="seller_card frame_8 me-3 flex-shrink-0"></div>
                        <div class="seller_card frame_9 me-3 flex-shrink-0"></div>
                        <div class="seller_card frame_10 me-3 flex-shrink-0"></div>
                        <div class="seller_card frame_11 me-3 flex-shrink-0"></div>
                        <div class="seller_card frame_12 me-3 flex-shrink-0"></div>
                    </div>
                </div>
            </section>
            <section class="categorias">
                <div class="heading_categ">
                    <div class="rectangulo_6 text_wrapper-5">Buscar por Categoría</div>
                </div>
                <br>
                <div class="category">
                    <div class="overlap">
                        <div class="items">
                            <div class="frame-15">
                                <img class="frame-14" />
                                <div class="text_wrapper-6">Computador</div>
                            </div>
                            <div class="frame-15">
                                <div class="frame-16"></div>
                                <div class="text_wrapper-7">SmartPhone</div>
                            </div>
                            <div class="frame-15">
                                <div class="frame-17"></div>
                                <div class="text_wrapper-7">Headphones</div>
                            </div>
                            <div class="frame-15">
                                <div class="frame-18"></div>
                                <div class="text_wrapper-7">Accesorios</div>
                            </div>
                            <div class="frame-15">
                                <div class="frame-19"></div>
                                <div class="text_wrapper-7">Camaras</div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <div class="botonVerMas">
                <button class="button_text_wrapper" onclick="window.location.href='/vercategorias'">Ver Más</button>
            </div>
            <br><br>
            <div class="heading_categ">
                <div class="rectangulo_6 text_wrapper-5">Nuestros Productos</div>
            </div>
            <section class="explorar-productos">
                <div class="wrapper flex-wrap" style="display: flex; justify-content: center; gap: 20px; flex-wrap: wrap;">
                    <% if (productos && productos.length > 0) { %>
                    <% productos.forEach(function(producto, index) { %>
                    <div class="card">
                        <% if (producto.descuento) { %>
                        <span class="off bg-dark" id="descuentoEtiqueta">-<%= producto.descuento %>%</span>
                        <% } %>
                        <br>
                        <div class="text-center p-4">
                            <a href="/producto/<%= producto.id %>">
                                <img id="main-image-<%= index %>" src="<%= producto.imagenPrincipal %>" width="300" class="main-image">
                            </a>
                        </div>
                        <% if (producto.imagenes && producto.imagenes.length > 1) { %>
                        <div class="thumbnail text-center">
                            <% producto.imagenes.forEach(function(img) { %>
                            <img onclick="changeImage(this, 'main-image-<%= index %>')" src="<%= img.url %>" width="70">
                            <% }); %>
                        </div>
                        <% } %>
                        <div class="about text-center">
                            <h6><%= producto.titulo %></h6>
                            <span>$<%= producto.precio %></span>
                        </div>
                        <div class="cart-button mt-3 px-2 d-flex justify-content-between align-items-center">
                            <button class="btn btn-dark text-uppercase" onclick="window.location.href='/producto/<%= producto.id %>'">
                                Ver producto
                            </button>
                            <div class="add">
                                <form method="POST" action="/carrito/agregar/<%= producto.id %>" class="add-to-cart-form">
                                    <input type="hidden" name="cantidad" value="1">
                                    <button type="submit" class="product_fav">
                                        <i class="fa fa-opencart"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                    <% } else { %>
                    <p>No hay productos disponibles.</p>
                    <% } %>
                </div>
                <div class="botonVerTodos">
                    <button class="button_text_wrapper" onclick="window.location.href='/productos'">
                        Ver todos los productos
                    </button>
                </div>
            </section>
        </main>
        <%- include('partials/footer') %>
    </div>
    <script src="/js/carrito-sidebar.js"></script>
    <script src="/js/slider.js"></script>
    <script src="/js/user-sidebar.js"></script>
    <script src="/js/index.js"></script>
    <script>
        setTimeout(() => {
            const messageContainer = document.getElementById('message-container');
            if (messageContainer) {
                messageContainer.style.transition = "opacity 0.5s ease";
                messageContainer.style.opacity = "0";
                setTimeout(() => {
                    messageContainer.remove();
                }, 500);
            }
        }, 3000);

        function changeImage(thumbnail, targetId) {
            const mainImage = document.getElementById(targetId);
            if (mainImage) {
                mainImage.src = thumbnail.src;
            }
        }
    </script>
    <div class="coordenadas-container">
        <button class="btn-coordinates">Mostrar Coordenadas</button>
    </div>
</body>

</html>